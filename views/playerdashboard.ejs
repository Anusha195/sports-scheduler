<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sports Scheduler</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background: #f4f4f4;
            margin: 0;
            padding: 0;
        }

        .container {
            width: 80%;
            margin: auto;
            padding-top: 20px;
        }

        header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            background: white;
            padding: 10px 20px;
            border-radius: 10px;
            box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.1);
        }

        .logout {
            color: red;
            text-decoration: none;
            font-weight: bold;
        }

        .dashboard {
            display: flex;
            justify-content: space-between;
            margin-top: 20px;
        }

        .card {
            background: white;
            padding: 20px;
            border-radius: 10px;
            width: 48%; 
        }

        .session-box {
            background: #f8f8f8;
            padding: 20px;
            border-radius: 5px;
            margin-bottom: 10px;
        }
        .sports-list {
            padding: 0;
            margin: 0;
        }

        .sports-list li {
            font-size: 18px; 
            padding: 10px 0; 
            list-style: none; 
            display: flex;
            align-items: center;
        }

        .sports-list li::before {
            content: "â€¢ ";
            color: black;
            font-weight: bold;
            font-size: 20px;
            margin-right: 8px;
        }

        .flash-message {
            padding: 10px;
            margin: 10px 0;
            border-radius: 5px;
            text-align: center;
            font-weight: bold;
        }

        .success {
            background-color: #4CAF50;
            color: white;
        }

        .error {
            background-color: #f44336;
            color: white;
        }

        .join-btn {
            background: #38393b;
            color: white;
            border: none;
            padding: 5px 10px;
            cursor: pointer;
        }

        .joined-sessions-container {
            background: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.1);
            margin-top: 20px;
        }

        .cancel-btn {
            background: rgb(66, 64, 64);
            color: white;
            border: none;
            padding: 5px 5px;
            cursor: pointer;
        }

        .create-session {
            text-align: center;
            margin-top: 15px;
        }

        .create-session a {
            color: #007bff;
            font-weight: bold;
            text-decoration: none;
        }
    </style>
</head>
<body>
    <div class="container">
        <header>
            <h1>Welcome, <%= user.firstName %>!</h1>
            <a href="/logout" class="logout">Logout</a>
        </header>

        <% if (successMessage.length > 0) { %>
            <div class="flash-message success">
                <%= successMessage %>
            </div>
        <% } %>
      
        <% if (errorMessage.length > 0) { %>
            <div class="flash-message error">
                <%= errorMessage %>
            </div>
        <% } %>

        <div class="dashboard">
            <div class="card">
                <h2>Available Sports</h2>
                <ul class="sports-list">
                    <% sports.forEach(sport => { %>
                        <li><%= sport.name %></li>
                    <% }) %>
                </ul>
            </div>
            <div class="card">
                <h2>Available Sessions</h2>
                <% if (availableSessions.length > 0) { %>
                    <% availableSessions.forEach(session => { %>
                        <div class="session-box">
                            <strong><%= session.sport.name %></strong> - <%= session.dateTime %> at <%= session.venue %>
                            <form action="/join-session/<%= session.id %>" method="POST">
                                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                <button type="submit" class="join-btn">Join</button>
                            </form>
                        </div>
                    <% }) %>
                <% } else { %>
                    <p>No sessions available.</p>
                <% } %>
            </div>
        </div>
        <div class="joined-sessions-container">
            <h2>My Joined Sessions</h2>
            <% if (joinedSessions.length > 0) { %>
                <% joinedSessions.forEach(session => { %>
                    <div class="session-box">
                        <strong><%= session.sport.name %></strong> - <%= session.dateTime %> at <%= session.venue %>
                        <form action="/cancel-session/<%= session.id %>" method="POST">
                            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                            <input type="text" name="reason" placeholder="Reason for cancellation" required>
                            <button type="submit" class="cancel-btn">Cancel</button>
                        </form>
                    </div>
                <% }) %>
            <% } else { %>
                <p>No joined sessions.</p>
            <% } %>

            <div class="create-session">
                <a href="/create-session">Create a New Session</a>
            </div>
        </div>
    </div>
</body>
</html>
